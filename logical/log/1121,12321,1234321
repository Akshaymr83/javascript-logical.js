let rows=4;

  for (let i = 1; i <= rows; i++) {
      let row = '';

      for (let j = 1; j <= rows - i; j++) {
          row += ' ';
      }


      for (let j = 1; j <= i; j++) {
          row += j;
      }

      for (let j = i - 1; j >= 1; j--) {
          row += j;
      }

      console.log(row);
  }
